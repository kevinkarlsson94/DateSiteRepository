@model List<Repositories.Profiles>

@{
    ViewBag.Title = "Browse Profiles";
    Layout = "~/Views/Shared/_Layout.cshtml";
    @Styles.Render("~/Content/browseStyle.css");

}

@{ 
    var profiles = (List<String>) ViewData["Profiles"];
}

<div class="container">
    <h1>Browse Profiles</h1>
    
    <div id="filter-profiles">
        <div class="row">

            <div class="col-md-4">
                <ul class="list-unstyled list-group filter-box">
                    <li><p>Age</p></li>
                    <li><p>
                            <div class="form-group form-group-age">
                                <select class="form-control" id="from">
                                    
                                    @for (int i = 0; i < 100; i++)
                                    {
                                        <option>@i</option>
                                    }
                                </select>
                            </div>
                            <p>-</p>
                            <div class="form-group form-group-age">
                                <select class="form-control" id="to">
                                    @for (int i = 0; i < 100; i++)
                                    {
                                        <option>@i</option>
                                    }
                                </select>
                            </div>
                        </p>
                    </li>
                </ul>
            </div>


            <div class="col-md-4">
                <ul class="list-unstyled list-group filter-box">
                    <li><p>Gender</p></li>
                    <li>
                        <div class="form-group form-group-gender">
                            <select class="form-control" id="to">
                                <option>Male</option>
                                <option>Female</option>
                            </select>
                        </div>
                    </li>
                </ul>
            </div>


            <div class="col-md-4">
                <ul class="list-unstyled list-group filter-box">
                    <li><p>Location</p></li>
                    <li>
                        <div class="form-group form-group-location">
                            <select class="form-control" id="to">
                                <option>Male</option>
                            </select>
                        </div>
                    </li>
                </ul>
            </div>
        </div>
    </div>

</div>


<div id="profiles">
    @foreach (var i in Model)
    {
        @i.Firstname <br />
        @i.Email <br />
        <br />
    }
</div>